{
  "name": "@evmts/guillotine-mini",
  "version": "0.1.0",
  "description": "Minimal, correct, and well-tested Ethereum Virtual Machine (EVM) implementation in TypeScript, prioritizing specification compliance and clarity",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "build:types": "tsc --emitDeclarationOnly --outDir dist || echo 'Type generation failed - fix TypeScript errors'",
    "check-size": "npm run build && size-limit",
    "test": "vitest",
    "test:specs": "bun test test/specs/generated",
    "test:specs:state": "bun test test/specs/generated/state",
    "test:specs:blockchain": "bun test test/specs/generated/blockchain",
    "codegen:specs": "bun scripts/generate-spec-tests.ts state && bun scripts/generate-spec-tests.ts blockchain",
    "codegen:specs:state": "bun scripts/generate-spec-tests.ts state",
    "codegen:specs:blockchain": "bun scripts/generate-spec-tests.ts blockchain",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run type-check && npm run build"
  },
  "keywords": [
    "ethereum",
    "evm",
    "virtual-machine",
    "blockchain",
    "smart-contracts",
    "web3",
    "evmts"
  ],
  "author": "William Cory",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/evmts/guillotine-mini.git"
  },
  "homepage": "https://github.com/evmts/guillotine-mini#readme",
  "bugs": {
    "url": "https://github.com/evmts/guillotine-mini/issues"
  },
  "peerDependencies": {
    "@tevm/voltaire": "*"
  },
  "dependencies": {
    "@noble/hashes": "^1.4.0"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.0",
    "@tevm/voltaire": "file:../voltaire",
    "@types/bun": "latest",
    "size-limit": "^11.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^2.0.0"
  },
  "size-limit": [
    {
      "name": "Full bundle",
      "path": "dist/index.js",
      "limit": "100 KB"
    }
  ]
}
